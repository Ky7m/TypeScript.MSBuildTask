        <file src="Readme.txt" target="" />
        <file src="tools\Install.ps1" target="tools" />
        <file src="tools\Uninstall.ps1" target="tools" />
        <file src="tools\ProjectFileTransform.ps1" target="tools" />
        <file src="tools\MSBuild\**" target="tools\MSBuild" />
        <file src="tools\Microsoft SDKs\**" target="tools\Microsoft SDKs" />
    </files>
</package>