<?xml version="1.0"?>
<package >
    <metadata>
        <id>TypeScript.MSBuildTask</id>
        <version>1.7.3</version>
        <authors>Marcel Veldhuizen, Igor Fesenko</authors>
        <owners>Marcel Veldhuizen, Igor Fesenko</owners>
        <projectUrl>https://github.com/Ky7m/TypeScript.MSBuildTask</projectUrl>
